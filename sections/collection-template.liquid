<section class="sprinkletime-section sprinkletime-section-sm">
    <div class="sprinkletime-container">
      <div class="sprinkle-holder">
        <div class="sprinkle"></div>
      </div>
      <div class="sprinkle-header-holder ">
       	 <h1 class="sprinkle-header ml16 pl-4 pb-2 pt-2"> {{ collection.title }}</h1>
      </div>
    </div>
  </section>

{% if collection.description != blank %}
{% assign is_donut = false %}
{% case collection.title%}
  {% when 'Original Donuts' %}
    {% assign donut_icon = 'HHH_Donut1.svg' | asset_url   %}
    {% assign is_donut = true %}
  {% when 'Specialty Donuts' %}
    {% assign donut_icon = 'HHH_Donut2.svg' | asset_url   %}
    {% assign is_donut = true %}
  {% when 'Vegan Donuts' %}
    {% assign donut_icon = 'HHH_Donut3.svg' | asset_url   %}
    {% assign is_donut = true %}
{% endcase %}
<section class="container-fluid bg--white py-3">
  <div class="container my-5 py-5">
  <div class="row">
    <div class="col-3 d-flex flex-column justify-content-center">
      <img src="{{ donut_icon }}" alt="{{ collection.title }}" class="donut-icon float" />
    </div>
    <div class="col-12 col-md-6 offset-md-2 text-center">
      <h1 class="feature-header h2">All About {{ collection.title }}</h1>
      <p class="lead text-left my-3">{{ collection.description }}</p>
      {% if is_donut %}
        <a class="btn button-outline my-3" href="/pages/nutrition">View Nutritional Info</a>
      {% endif %}
    </div>
  </div>
</section>
 {% endif %}

 <section class="product-list cf container-fluid container-lg py-3 my-3 px-md-5" id="CollectionSection-{{ block.id }}" data-section-id="{{ block.id }}" data-section-type="collection-template">
   <div class="row">
     <div class="col-12 align-left">
       <h1 class="feature-header h2 align-left feature-header--visible pt-3">{{ collection.title }}</h1>
     </div>
     {% unless collection.products.size > 0 %}
       <div class="col-12"><p class="align-centre"><em>{{ 'collections.general.no_matches' | t }}</em></p></div>
     {% endunless %}
   </div>
   <div class="row row-cols-1 row-cols-md-1 row-cols-xl-2">
     {% for product in collection.products limit: '24'%}
       {% include 'product-block-horiz' %}
     {% endfor %}
   </div>
 </section>

 <section class="container">
   <div class="row">
     <div class="col-12 mx-auto text-center my-5">
       <a class="btn btn-primary" href="/collections">{% include 'svg-chevron-left' %} Back To All Donuts</a>
     </div>
   </div>
 </section>


{% schema %}
  {
    "name": "Collection pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "coll_content_bg_show",
        "label": "Show background color behind title and description",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "coll_show_tags",
        "label": "Show tag filters",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "coll_show_sort",
        "label": "Show sorting dropdown",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "coll_show_feat",
        "label": "Show 'Featured' option in sorting dropdown",
        "default": false
      },
      {
        "type": "select",
        "id": "coll_layout",
        "label": "Product layout",
        "options": [
          {
            "value": "columns",
            "label": "Collage"
          },
          {
            "value": "rows",
            "label": "Grid"
          }
        ],
        "default": "columns"
      },
      {
        "type": "range",
        "id": "coll_layout_per_row_int",
        "label": "Products per row",
        "min": 2,
        "max": 4,
        "default": 3
      },
      {
        "type": "range",
        "id": "coll_num_prods_int",
        "label": "Number of products to show per page",
        "min": 6,
        "max": 48,
        "step": 6,
        "default": 12
      },
      {
        "type": "select",
        "id": "hover_effect",
        "label": "Hover effect",
        "default": "info",
        "options": [
          {
            "value": "info",
            "label": "Show title and price"
          },
          {
            "value": "image",
            "label": "Show second image"
          },
          {
            "value": "",
            "label": "None"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "coll_infiniscroll",
        "label": "Enable infinite-scroll",
        "default": true
      }
    ]
  }
{% endschema %}
