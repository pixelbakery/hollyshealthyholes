<section  class="container-fluid bg--white" id="kitchen">
  <div class="row no-gutter d-flex ">
    <div class="col-12 col-md-8 col-xl-6 left order-last order-md-first flex-fill">
      <div class="container  p-5 d-flex flex-column justify-content-center  h-100">
       <div class="row mx-3 mb-3 pb-3">
         <div class="col-12 blue text-left">
           <h2 class="feature-header h2 align-left feature-header--visible pt-3 ml-0">THE KITCHEN</h2>
         </div>
        </div>
        <div class="row mx-3 mb-3 pb-3">
          <div class="col-12 col-md-4 text-left">
            <h4 class="border-bottom pb-2 mr-4 text-left">Location & Contact</h4>
          </div>
          <div class="col-12 col-md-8 text-muted small">
            <p class=" text-left  pb-0 mb-0">2215 Leavenworth St<br>Omaha, NE 68102</p>
            <a href="https://goo.gl/maps/E4AdBdsvQJ7NSfMD7"  target="_blank" rel="noreferrer"><small class="text-transform-italic small text-muted text-left mt-0 pt-0">MAP IT</small></a>
            <br/><br/>
            <a href="mailto:holler@hollyshealthyholes.com" target="_blank">holler@hollyshealthyholes.com</a><br/>
            <a href="tel:4023473050" target="_blank">(402) 347-3050</a>
          </div>
          <div class="col-12 col-md-8 text-muted small">

          </div>
        </div>
        <div class="row mx-1 mx-md-3 mb-3">
          <div class="col-12 col-md-4 text-left">
            <h4 class="border-bottom pb-2 mr-2 mr-md-4 text-left">Pickup Hours</h4>
          </div>
          <div class="col-12 col-md-8 text-muted small">
            <div class="row">
              <!-- Monday -->
              {% if monday and monday_hours != blank %}
                <div class="col-4 text-left">
                  MONDAY
                </div>
                <div class="col-8 text-right">
                  {{ monday_hours }}
                </div>
              {% endif %}
              <!-- End Monday -->

              <!-- Tuesday -->
              {% if tuesday and tuesday_hours != blank %}
                <div class="col-4 text-left">
                  TUESDAY
                </div>
                <div class="col-8 text-right">
                  {{ tuesday_hours }}
                </div>
              {% endif %}
              <!-- End Tuesday -->

              <!-- wednesday -->
              {% if wednesday and wednesday_hours != blank %}
                <div class="col-4 text-left text-uppercase">
                  wednesday
                </div>
                <div class="col-8 text-right">
                  {{ wednesday_hours }}
                </div>
              {% endif %}
              <!-- End wednesday -->

              <!-- thursday -->
              {% if thursday and thursday_hours != blank %}
                <div class="col-4 text-left text-uppercase">
                  thursday
                </div>
                <div class="col-8 text-right">
                  {{ thursday_hours }}
                </div>
              {% endif %}
              <!-- End thursday -->

              <!-- friday -->
              {% if friday and friday_hours != blank %}
                <div class="col-4 text-left text-uppercase">
                  friday
                </div>
                <div class="col-8 text-right">
                  {{ friday_hours }}
                </div>
              {% endif %}
              <!-- End friday -->

              <!-- saturday -->
              {% if saturday and saturday_hours != blank %}
                <div class="col-4 text-left text-uppercase">
                  saturday
                </div>
                <div class="col-8 text-right">
                  {{ saturday_hours }}
                </div>
              {% endif %}
              <!-- End saturday -->

              <!-- sunday -->
              {% if sunday and sunday_hours != blank %}
                <div class="col-4 text-left text-uppercase">
                  sunday
                </div>
                <div class="col-8 text-right">
                  {{ sunday_hours }}
                </div>
              {% endif %}
              <!-- End sunday -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4 col-xl-6 right order-first order-md-last mh-75 p-0">
      <img class="object-fit " alt="the bakery located in lincoln nebraska where the healthy donuts are made" src="https://media.pixelbakery.com/HHH/images/PB-5229.jpg"/>
    </div>
  </div>
</section>


