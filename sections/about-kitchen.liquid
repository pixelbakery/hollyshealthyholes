{% assign wednesday = section.settings.wednesday_open %}
{% assign wednesday_hours = section.settings.wednesday_hours %}

{% assign thursday = section.settings.thursday_open %}
{% assign thursday_hours = section.settings.thursday_hours %}

{% assign friday = section.settings.friday_open %}
