{% section 'sprinkles-sm-header' %}

<section class="container-fluid bg--white shopify-section py-5">
  <div class="container my-3 py-3">
    <div class="mx-auto text-center my-3">
      <img src=" {{ 'HHH_Coffee.svg' | asset_url }}" class="coffee-svg "/>
    </div>
  <h4 class="feature-header my-3">Your shop probably needs our donuts in its life. Shoot us a message, and we’ll talk wholesale. Can’t wait!</h4>




    <div class="container form mx-2 mx-md-5">
      <div class="row px-2 px-md-5">
        <div class="col-12">
          {% form 'contact' %}
          {% if form.posted_successfully? %}
          <p class="lead">{{ 'contact.form.post_success' | t }}</p>

          {% else %}

          {% if form.errors %}
          {% assign message_label = 'contact.form.message' | t %}
          <ul class="errors text-left">
            {% for field in form.errors %}
            <li>{{ field | replace: 'body',message_label | capitalize }} - {{ form.errors.messages[field] }}</li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
        <div class="col-12 my-2">
          <input aria-label="{{ 'contact.form.name' | t }}" placeholder="{{ 'contact.form.name' | t }}" type="text" class="required" id="contact_name" name="contact[name]" />
        </div>
        <div class="col-12 my-2">
          <input aria-label="{{ 'contact.form.email' | t }}" placeholder="{{ 'contact.form.email' | t }}" type="email" class="required" id="contact_email" class="email" name="contact[email]" />
        </div>
        <div class="col-6 my-2">
          <input aria-label="Phone Number" placeholder="Phone Number" type="tel" class="required" id="contact_phone" class="phone" name="contact[phone]" />
        </div>
        <div class="col-6 my-2">
          <input aria-label="Date" placeholder="When Do You Want It" type="date" class="required" id="contact_date" class="date" name="contact[date]" />
        </div>
        <div class="col-12 my-2">
          <input aria-label="Name of Business / Event" placeholder="Name of Business / Event" type="text" class="required" id="contact_business" name="contact[business]" />
        </div>
        <div class="col-12 my-2">
          <textarea aria-label="Tell us about your order request" placeholder="Tell us about your order request" id="message" class="required" name="contact[body]"></textarea>
        </div>
        <div class="col-12 my-2">
          <div class="wide-action">
            <input type="submit" value="{{ 'contact.form.send' | t }}" />
          </div>
        </div>
      </div>
      <div class="input-row">

      </div>
      <div class="input-row w-50 float-left">

      </div>
      <div class="input-row w-50 float-right">

      </div>
      <div class="input-row">

      </div>
      <div class="input-row">

      </div>

    </div>
    {% endif %}
    {% endform %}
  </div>
</div>
</section>
