#ssw-widget-recommends-html {
  margin-right: 30px;
  margin-left: 30px;
  margin-bottom: 30px;
}

#ssw-widget-recommends-html .ssw-or {
  line-height: 44px;
}

.ssw-review-slider-widget {
  margin-right: 30px;
  margin-left: 30px;
}

#ssw-widget-recommends-html .ssw-add-recommend a:hover,
#ssw-widget-recommends-html .ssw-control-group .button:hover {
  color: #774d4b;
}

#recomends_list .ssw-timestamp,
#ssw-widget-recommends-html .ssw-review-helpful-vote-count {
  color: #464654;
}

#ssw-widget-recommends-html #recomends_list .ssw-item {
  max-width: 700px;
}
 
#page-menu .ssw-dropdown-toggle {
  display: block;
}

#page-menu .ssw-dropdown-menu > li > a,
#page-menu .ssw-dropdown-menu > li > a:hover,
#page-menu .ssw-dropdown-menu > li > a:focus {
  background: transparent;
  color: rgb(120, 160, 119);;
}

#page-menu .ssw-dropdown-menu {
  margin-top: 10px;
  position: relative;
  border: none;
  box-shadow: none;
  background: transparent;
  text-align: center;
}

.ssw-reviews-caption {
  top: 50% !important;
}

#ssw-page {
  padding: 0 20px;
}

.ssw-edit-profile-page h2 {
  line-height: 40px;
}

.ssw-profile-edit-tabs {
  display: inline-block;
  margin-bottom: 50px;
  padding-left: 0;
}

.ssw-profile-edit-tabs li > a {
  padding: 0 0 10px 0 !important;
  margin-right: 20px;
  margin-bottom: 20px;
}

.ssw-edit-profile-page #fbdis {
  padding-top: 11px;
}

@media all and (max-width: 476px) {
  .ssw-edit-profile-page .ssw-control-label {
    float: none !important;
    width: auto !important;
  }
  .ssw-edit-profile-page .ssw-controls {
    display: block;
    margin-left: 0 !important;
    margin-top: 10px;
  }
  .ssw-edit-profile-page .ssw-social-btn {
    margin-left: 0 !important;
  }
}

@media all and (max-width: 364px) {
  #privacy_div .ssw-controls .ssw-radio.ssw-inline {
    margin-left: 0 !important;
  }
}

@media all and (max-width: 360px) {
  .ssw-faves-share-bar .ssw-share-faves {
    margin: 0 2px !important;
  }
}