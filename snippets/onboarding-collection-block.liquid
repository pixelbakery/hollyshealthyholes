<div class="product-block collection-block hover-{{ section.settings.hover_effect }} {{ product_class }}" data-loop-index="{{forloop.index}}">
  <div class="product-block__inner">
    <div class="image">
      <span class="image-inner">
        {% capture placeholder_svg_name %}collection-{{ forloop.index0 | modulo: 6 | plus: 1 }}{% endcapture %}
        <div class="placeholder-image">{{ placeholder_svg_name | placeholder_svg_tag }}</div>
      </span>
    </div>
    <div class="caption {% if section.settings.show_count %}upper{% else %}middle{% endif %}">
      <span class="title">{{ 'onboarding.collection.title' | t }}</span>
    </div>
    {% if section.settings.show_count %}
    <div class="caption lower">
      <span class="price">
        {{ 'collections.general.product_count' | t: count: 0 }}
      </span>
    </div>
    {% endif %}
  </div>
</div>
